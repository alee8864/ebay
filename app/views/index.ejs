<html>
<head>
    <title>Listing Generator</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <div class="container js-region-main main"></div>

    <script data-main="js/require-main" src="js/vendor/require.js"></script>


    <script type="text/template" id="tpl-main-page-layout">
        <div class="js-listing-form-container listing-form-container"></div>
        <div class="js-output-container"></div>
    </script>


    <script type="text/template" id="tpl-listting-form-product-create">
        <div class="row u-pad-v-20">
            <div class="col-sm-1 col-sm-push-11">
                <button type="button" class="close js-close" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="col-sm-8">
                <div class="form-group">
                    <label for="new-product-title" class="col-sm-3 control-label">Title</label>
                    <div class="col-sm-9">
                        <input id="new-product-title" class="form-control" type="text" 
                          placeholder="Ener title" value="{{-title}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="new-product-description" class="col-sm-3 control-label">Description</label>
                    <div class="col-sm-9">
                        <input id="new-product-description" class="form-control" type="text" 
                          placeholder="Enter description" value={{-description}}>
                    </div>
                </div>

                <div class="form-group">
                    <label for="new-product-thumbnail-link" class="col-sm-3 control-label">Thumbnail Link</label>
                    <div class="col-sm-9">
                        <input id="new-product-thumbnail-link" class="js-thumbnail-link form-control" type="text" 
                          placeholder="Enter Image Link" value="{{-thumbnail_link}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="new-product-image-link" class="col-sm-3 control-label">Image Link</label>
                    <div class="col-sm-9">
                        <input id="new-product-image-link" class="form-control" type="text" 
                          placeholder="Enter Image Link" value="{{-image_link}}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <span class="pull-right btn btn-default new-product-upload-container">
                            <span>Upload Image</span>
                            <input id="upload" class="new-product-upload js-new-product-upload" type="file">
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-sm-2">
                <img class="js-product-image product-image" src="{{-thumbnail_link}}">
            </div>
        </div>
    </script>


    <script type="text/template" id="tpl-listing-form-product-list">
        <div class="js-products-container products-container"></div>
        <button class="js-add-product add-product-btn btn col-xs-12" type="button">
            Add A Product
        </button>
    </script>


    <script type="text/template" id="tpl-listing-form-form">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="row">
                <h2 class="col-xs-12">Create Listing</h2>
            </div>
            
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Header</label>
                    <div class="col-sm-7">
                        <input id="listing-header" class="form-control" type="text" 
                          placeholder="Enter listing title" value="{{-title}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Description</label>
                    <div class="col-sm-7">
                        <input id="listing-description" class="form-control" type="text" 
                          placeholder="Enter listing description" value="{{-description}}">
                    </div>
                </div>

                <div class="js-product-container form-group"></div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <button class="btn btn-primary pull-right" type="submit">Save Listing</button>
                    </div>
                </div>
            </form>
        </div>
    </script>


    <script type="text/template" id="tpl-listing-layout">
        <div class="header-section-container title"></div>
        <div class="item-description-section-container"></div>
        <div class="item-collection-container"></div>
        <div class="shipping-container"></div>
        <div class="disclaimer-section-container"></div>
    </script>


    <script type="text/template" id="tpl-section">
        <div class="section-header">
            <h4>{{- header }}</h4>
        </div>
        <div class="section-content"></div>
    </script>


    <script type="text/template" id="tpl-listing-header">
        <h1 class="page-header">{{- title }}</h1>
        <div class="lead">{{- description }}</div>
    </script>


    <script type="text/template" id="tpl-listing">
        <div class="js-listing-container"></div>
        <div class="row">
            <div class="col-xs-11">
                <button class="js-copy-button btn btn-default pull-right" type="button">Copy HTML</button>
            </div>
            <textarea class="js-copy-textarea copy-textarea"></textarea>
        </div>
    </script>


    <script type="text/template" id="tpl-shipping">
        <ul>
            <li>All items come bagged and boarded.</li>
            <li>
              Feel free to browse <a href="http://www.ebay.com/sch/how_bout_some_comics/m.html">my other items</a>. 
              All items can be combined for a set $5.00 shipping fee.
            </li>
        </ul>
    </script>


    <script type="text/template" id="tpl-disclaimer">
        <div>
            If you have any questions regarding the items, please, feel free to ask and I'll answer as best as I can.
        </div>
        <div style="margin-top:25px;">
            Thanks for looking!
        </div>
    </script>


    <script type="text/template" id="tpl-item">
        <div class="card-image">
            <img src="{{- thumbnail_link }}" title="{{- title }}" >
            <div class="expand-icon expand"></div>
        </div>
        <div class="card-info">
            <h4 class="card-title">{{- title }}</h4>
            <div class="card-description">{{- description }}</div>
        </div>
    </script>


    <script type="text/template" id="tpl-tab-wrapper">
        <ul class="nav nav-tabs" role="tablist"></ul>
        <div class="tab-content"></div>
    </script>


    <script type="text/template" id="tpl-tab-view">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#listing-form" role="tab" data-toggle="tab">Listing Creation Form</a>
            </li>
            <li role="presentation">
                <a href="#listing-preview" role="tab" data-toggle="tab">Preview</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="listing-form" role="tabpanel" class="tab-pane active"></div>
            <div id="listing-preview" role="tabpanel" class="tab-pane"></div>
        </div>
    </script>


    <script type="text/template" id="tpl-template">
        <style type="text/css">
            .content {
                font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
                font-size: 16px;
            }

            .grid-container {
                display: grid;
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;

                border: 1px solid #aaa;
            }

            .cards {
                display: grid;
                padding: 20px;
                grid-template-columns: repeat(2, 1fr);
                grid-column-gap: 20px;
                grid-row-gap: 20px;
            }

            .card {
                border: 1px solid #aaa;
                display: grid;
                grid-template-columns: 1fr 1fr;
                box-shadow: 2px 2px 4px #888888;
            }

            @media screen and (max-width: 700px) {
                .cards {        
                    grid-template-columns: repeat(1, 1fr);
                }
                .card {
                    display: block;
                }
            }

            .title h1 {
                font-size: 2em;
                font-weight: 500;
                margin-bottom: 10px;
                padding-bottom: 15px;
                border-bottom: 1px solid #d7d7d7;
            }

            h4, .h4 {
                font-size: 18px;
            }

            .decription {
                font-size: 1.5em;
                font-weight: 300;
            }

            .items-container > div:first-child {
                margin-top: 20px;
                font-size: 1.1em;
                font-weight: 500;
            }

            .expand-icon {
                background-size: 100%;
                background-image: url("data:image/png;base64,");
            }

            .card-image img:hover {
                opacity: 0.5;
                cursor: pointer;
            }

            .card-image {
                position: relative;
                border-right: 1px solid #aaa;
            }

            .card-image img {
                width: 100%;
            }

            .expand-icon-container {
                position: relative;
                width: 20%;

            }

            .expand {
                position: absolute;
                bottom: 10px;
                right: 10px;
                width: 15%;
                height: auto;
                pointer-events: none;
            }

            .card-image img:hover + .expand {
                display: block;
            }

            .card-title {
                margin-top: 20px;
                margin-left: 20px;
                margin-right: 20px;
                margin-bottom: 10px;
            }

            .card-description {
                margin-left: 20px;
                margin-right: 20px;
                margin-bottom: 20px;
            }

        </style>

        <div class="grid-container js-content">
        </div>
    </script>

</body>
</html>